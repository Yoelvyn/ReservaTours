@model ReservaTours.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Usuario</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg p-4 rounded-4 bg-light">
            <h3 class="text-center mb-4">Nuevo Usuario</h3>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Nombre" class="form-label fw-semibold">Nombre</label>
                    <input asp-for="Nombre" class="form-control rounded-3" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label fw-semibold">Correo Electrónico</label>
                    <input asp-for="Email" class="form-control rounded-3" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 form-check">
                    <input type="checkbox" class="form-check-input" asp-for="EsAdmin" />
                    <label class="form-check-label fw-semibold" for="EsAdmin">Es Administrador</label>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4 py-2 rounded-3 shadow-sm">
                        <i class="bi bi-check-circle-fill me-2"></i>Guardar Usuario
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


<div>
    <a class="btn btn-success" asp-action="Index">Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
