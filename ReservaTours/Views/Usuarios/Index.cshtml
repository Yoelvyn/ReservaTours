<div class="container mt-4">
    <h2>Listado de Usuarios</h2>

    @foreach (var item in Model)
    {
        <div class="card shadow-sm rounded-4 mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title mb-1">
                            <i class="bi bi-person-fill text-info"></i> @item.Nombre
                        </h5>
                        <p class="card-text text-muted mb-1">
                            <i class="bi bi-envelope-fill"></i> @item.Email
                        </p>
                        <p class="card-text">
                            <i class="bi bi-shield-lock-fill"></i>
                            Rol: @(item.EsAdmin ? "Administrador" : "Usuario")
                        </p>
                    </div>
                    <div>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning me-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary me-2">
                            <i class="bi bi-info-circle"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>