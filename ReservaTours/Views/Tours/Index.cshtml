<div class="container mt-4">
    <h2 class="mb-4">Listado de Tours</h2>

    @foreach (var item in Model)
    {
        <div class="card shadow-sm rounded-4 mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="card-title mb-2">
                            <i class="bi bi-geo-alt-fill text-danger"></i> @item.Nombre
                        </h4>
                        <p class="card-text text-muted mb-1">
                            <i class="bi bi-file-text"></i> @item.Descripcion
                        </p>
                        <p class="card-text mb-1">
                            <i class="bi bi-currency-dollar"></i> @item.Precio
                        </p>
                        <p class="card-text">
                            <i class="bi bi-calendar-event"></i>
                            @item.Fecha.ToString("dd/MM/yyyy")
                        </p>

                    </div>
                    <div>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning me-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary me-2">
                            <i class="bi bi-info-circle"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>