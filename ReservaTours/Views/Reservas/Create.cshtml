@model ReservaTours.Models.Reserva

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Reserva</h4>
<hr />



<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg p-4 rounded-4 bg-light">
            <h3 class="text-center mb-4">Nueva Reserva</h3>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="UsuarioId" class="form-label fw-semibold">Usuario</label>
                    <select asp-for="UsuarioId" class="form-select" asp-items="ViewBag.UsuarioId"></select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TourId" class="form-label fw-semibold">Tour</label>
                    <select asp-for="TourId" class="form-select" asp-items="ViewBag.TourId"></select>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4 py-2 rounded-3 shadow-sm">
                        <i class="bi bi-check-circle-fill me-2"></i>Guardar
                       
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


<div>
    <a class="btn btn-success" asp-action="Index">Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
